@model OrderIndexVM
@{
    ViewData["Title"] = "Index";
}

<form asp-action="Index" method="get">
    <div class="container p-4 my-3">
        <h2 class="text-info">Orders Management</h2>
        <div class="border bg-white p-3" style="border-radius:15px">
            <div class="row">
                <div class="col-12">
                    <div class="row" style="padding-top:10px">
                        <div class="col-4">
                            <input name="searchName" class="form-control" placeholder="Name..."/>
                        </div>
                        <div class="col-4">
                            <input name="searchEmail" class="form-control" placeholder="Email..."/>
                        </div>
                        <div class="col-4">
                            <input name="searchPhone" class="form-control" placeholder="Phone..."/>
                        </div>
                    </div>
                    <div class="row pt-2">
                        <div class="col-4">
                            <select name="searchStatus" class="form-select" asp-items="@Model.StatusSelectList">
                                <option selected value="">All</option>
                            </select>
                        </div>
                        <div class="col-4 offset-4">
                            <button type="submit" class="btn btn-outline-primary form-control">
                                <i class="fas fa-search"></i> Search
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

<hr />

<div class="bg-white p-3">
    <ejs-grid id="Grid" dataSource="@Model.OrderHeaders" allowFiltering="true" allowSorting="true" allowPaging="true">
        <e-grid-filtersettings type="Menu"></e-grid-filtersettings>
        <e-grid-pagesettings pageSize="5"></e-grid-pagesettings>
        <e-grid-columns>
            <e-grid-column field="Id" headerText="ID" isPrimaryKey="true" textAlign="Right" width="100"></e-grid-column>
            <e-grid-column field="FullName" headerText="Name" textAlign="Right"></e-grid-column>
            <e-grid-column field="Email" headerText="Email" textAlign="Right"></e-grid-column>
            <e-grid-column field="PhoneNumber" headerText="Phone" textAlign="Right"></e-grid-column>
            <e-grid-column field="OrderStatusText" headerText="Status" textAlign="Right"></e-grid-column>
            <e-grid-column field="OrderDate" headerText="Date" customFormat="@(new {type="date", format="dd/MM/yyyy"})" textAlign="Right"></e-grid-column>
            
            <e-grid-column field="Id" allowfiltering="false" headerText="" width="70" template="<a href='Order/Details/${Id}' class='btn btn-primary'><i class='fas fa-list'></i></a>"></e-grid-column>
        </e-grid-columns>
    </ejs-grid>
</div>

