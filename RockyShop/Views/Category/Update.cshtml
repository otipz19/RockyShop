@model Category
@{
	ViewData["Title"] = "Update";
}

<form method="post" asp-action="Update">
	<div class="border p-4 bg-white">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
		<div class="form-group row">
			<h2 class="text-info pl-3">Update Category</h2>
		</div>
		<div class="row">
            <div class="col-8">
                <div class="form-group row mb-2">
                    <div class="col-4">
                        <label asp-for="Name"></label>
                    </div>
                    <div class="col-8">
                        <input type="textbox" asp-for="Name" class="form-control"/>
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row mb-2">
                    <div class="col-4">
                        <label asp-for="DisplayOrder"></label>
                    </div>
                    <div class="col-8">
                        <input type="number" asp-for="DisplayOrder" class="form-control">
                        <span asp-validation-for="DisplayOrder" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-8 offset-4 row">
                        <div class="col">
                            <button type="submit" class="btn btn-outline-success w-100">
                                <i class="fa-solid fa-pen-to-square"></i> Update
                            </button>
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-outline-danger w-100">
                                <i class="fa-solid fa-backward"></i> Back
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-4">
                @* Keep this empty *@
            </div>
        </div>
	</div>
</form>

@section Scripts{
    @{<partial name="_ValidationScriptsPartial"/>}
}