@model RockyShop.Models.Product
@{
    ViewData["Title"] = "Delete";
}

<form method="post" asp-action="Delete">
    <input hidden asp-for="Id" />
	<div class="border p-4">
		<div class="form-group row">
            <h2 class="text-info pl-3">Delete Product</h2>
		</div>
		<div class="row">
            <div class="col-8">
                <div class="form-group row mb-2">
                    <div class="col-4">
                        <label asp-for="Name"></label>
                    </div>
                    <div class="col-8">
                        <input disabled type="text" asp-for="Name" class="form-control"/>
                    </div>
                </div>
                <div class="form-group row mb-2">
                    <div class="col-4">
                        <label asp-for="Price"></label>
                    </div>
                    <div class="col-8">
                        <input disabled type="number" asp-for="Price" class="form-control">
                    </div>
                </div>
                <div class="form-group row mb-2">
                    <div class="col-4">
                        <label asp-for="ShortDescription"></label>
                    </div>
                    <div class="col-8">
                        <input disabled type="text" asp-for="ShortDescription" class="form-control"/>
                    </div>
                </div>
                <div class="form-group row mb-2">
                    <div class="col-4">
                        <label asp-for="Description"></label>
                    </div>
                    <div class="col-8">
                        <textarea disabled asp-for="Description" class="form-control summernote"></textarea>
                    </div>
                </div>
                <div class="form-group row mb-2">
                    <div class="col-4">
                        <label asp-for="CategoryId"></label>
                    </div>
                    <div class="col-8">
                        <input disabled asp-for="CategoryId" type="text" value="@Model.Category.Name" class="form-control" />
                    </div>
                </div>
                <div class="form-group row mb-2">
                    <div class="col-4">
                        <label asp-for="ApplicationTypeId"></label>
                    </div>
                    <div class="col-8">
                        <input disabled asp-for="ApplicationTypeId" type="text" value="@Model.ApplicationType.Name" class="form-control" />
                    </div>
                </div>
                <div class="form-group row mb-2">
                    <div class="col-4">
                        Image
                    </div>
                    <div class="col-8">
                        <input disabled asp-for="Image" type="file" name="Image" id="uploadBox" multiple class="form-control"/>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-8 offset-4 row">
                        <div class="col">
                            <button type="submit" class="btn btn-outline-danger w-100">
                                <i class="fa-solid fa-trash"></i> Delete
                            </button>
                            
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-outline-success w-100">
                                <i class="fa-solid fa-backward"></i> Back
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-4">
                <img src="@Model.Image" class="w-100" style="border-radius:5px; border:2px solid #bbb; "/>
            </div>
        </div>
	</div>
</form>

@section Scripts{
    <script>
        $(document).ready(function() {
            $('.summernote').summernote({
                height: 250,
            });
            $('.summernote').summernote('disable');
        });
    </script>
}