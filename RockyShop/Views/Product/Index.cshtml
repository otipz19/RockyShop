@model IEnumerable<Product>
@{
	ViewData["Title"] = "Index";
}

<div class="container p-3">
	<div class="row pt-4">
		<div class="col-6">
			<h2 class="text-primary">Products List</h2>
		</div>
		<div class="col-6 text-end">
			<a asp-action="Upsert" class="btn btn-primary">
				<i class="fa-solid fa-plus"></i> Create New Product
			</a>
		</div>
	</div>

	<br /><br />

	@if(Model.Count() > 0)
	{
		<table class="table table-bordered table-striped" style="width:100%">
			<thead>
				<tr>
					<th>
						Product Name
					</th>
					<th>
						Price
					</th>
					<th>
						Category
					</th>
					<th>
						Application Type
					</th>
					<th>

					</th>
				</tr>
			</thead>
			<tbody>
				@foreach(var product in Model)
				{
					<tr>
						<td width="15%">@product.Name</td>
						<td width="15%">@product.Price</td>
						<td width="15%">@product.Category.Name</td>
						<td width="15%">@product.ApplicationType.Name</td>
						<td width="30%"> 
							<div class="text-center">
								<div class="btn-group w-100">
									<a asp-action="Upsert" asp-route-id="@product.Id" class="btn btn-outline-primary mx-2">
										<i class="fa-solid fa-pen-to-square"></i> Update
									</a>
									<a asp-action="Delete" asp-route-id="@product.Id" class="btn btn-outline-danger mx-2">
										<i class="fa-solid fa-trash"></i> Delete
									</a>
								</div>
							</div>
						</td>
					</tr>
				}
			</tbody>
		</table>
	}
	else
	{
		<p>No products yet!</p>
	}
</div>
