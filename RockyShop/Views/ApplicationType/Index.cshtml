@model IEnumerable<RockyShop.Models.ApplicationType>
@{
	ViewData["Title"] = "Index";
}

<div class="container p-3">
	<div class="row pt-4">
		<div class="col-6">
			<h2 class="text-primary">Application Types List</h2>
		</div>
		<div class="col-6 text-end">
			<a asp-action="Create" class="btn btn-primary">
				<i class="fa-solid fa-plus"></i> Create New Application Type
			</a>
		</div>
	</div>

	<br /><br />

	@if(Model.Count() > 0)
	{
		<table class="table table-bordered table-striped" style="width:100%">
			<thead>
				<tr>
					<th>
						Application Type Name
					</th>
					<th>

					</th>
				</tr>
			</thead>
			<tbody>
				@foreach(var appType in Model)
				{
					<tr>
						<td width="50%">@appType.Name</td>
						<td width="50%"> 
							<div class="text-center">
								<div class="btn-group w-75">
									<a asp-action="Update" asp-route-id="@appType.Id" class="btn btn-outline-primary mx-2">
										<i class="fa-solid fa-pen-to-square"></i> Update
									</a>
									<a asp-action="Delete" asp-route-id="@appType.Id" class="btn btn-outline-danger mx-2">
										<i class="fa-solid fa-trash"></i> Delete
									</a>
								</div>
							</div>
						</td>
					</tr>
				}
			</tbody>
		</table>
	}
	else
	{
		<p>No application types yet!</p>
	}
</div>
