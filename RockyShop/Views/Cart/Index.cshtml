@model IEnumerable<RockyShop.Model.Models.Product>
@{
    ViewData["Title"] = "Index";
}

<form asp-action="Summary" method="get">
    <br />
    <div class="backgroundWhiteBorder">
        <div class="container row">
            <div class="col -8">
                <div class="card mt-4">
                    <div class="card-header bg-dark text-light ml-0 row container">
                        <div class="col-6">
                            <i class="fa fa-shopping-cart"></i> &nbsp;
                            Shopping Cart
                        </div>
                        <div class="col-6 text-end">
                            <a asp-controller="Home" asp-action="Index" class="btn btn-outline-info btn-sm">Continue Shopping</a>
                        </div>
                    </div>
                    @if(Model.Count() > 0)
                    {
                        <div class="card-body">
                        <div class=" d-none d-lg-block">
                            <div class="row" style="color:#821f3d">
                                <div class="col-lg-2">
                                </div>
                                <div class="col-12 col-lg-7">
                                    Product Details
                                </div>
                                <div class="col-12 col-lg-2">
                                    Price per sqft
                                </div>
                                <div class="col-6 col-sm-4 col-lg-1">
                                </div>
                            </div>
                        </div>

                        <hr /> 
                        @foreach(Product product in Model)
                        {
                            <div class="row h-100">
                                <div class="col-4 col-md-2 text-center py-2">
                                    <img src="@product.Image" class="rounded w-100" />
                                </div>
                                <div class="col-8 col-lg-7">
                                    <h5>@product.Name</h5>
                                    <div style="font-size:11px;">@(Html.Raw(product.Description))</div>
                                </div>
                                <div class="col-3 col-lg-2 pt-lg-4" style="font-size:11px;">
                                    <span style="font-size:17px;"> @product.Price.ToString("c")</span>/ sqft

                                </div>
                                <div class="col-2 col-lg-1 p-0 pt-lg-4 text-center">
                                    <a asp-action="Remove" asp-route-Id="@product.Id" class="btn btn-outline-danger">
                                        <i class="fas fa-trash"></i>
                                    </a>
                                </div>
                            </div>
                        }
                        <hr />
                        </div>
                    }
                    else
                    {
                        <h2 class="text-center text-primary">No products in cart!</h2>
                    }

                    <div class="card-footer">
                        <div class="row">
                            <div class="col-6 col-md-3 offset-md-9">
                                @if(Model.Count() > 0)
                                {
                                     <button type="submit" class="btn btn-success form-control ">
                                        <span>Continue</span>
                                     </button>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

